<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:simplify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}">

    <Button
        android:id="@+id/btnMakePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/make_payment_btn"/>
    
    <ProgressBar android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/progressFooter"
        android:indeterminate="true" android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip" android:layout_centerInParent="true" android:visibility="gone" ></ProgressBar>
    
